@startuml
title Логічна схема JSON-моделі (MongoDB)

skinparam package {
  BackgroundColor White
  BorderColor Black
}

package "Інструкція_з_безпеки (Document)" {
    [інструкція_id] as InstrID
    [статус_адаптації]
    [вміст_інструкції]
    
    package "Матеріал_об'єкта" {
        [матеріал_id] as MatID
        [назва_матеріалу]
        [тип_матеріалу]
    }
}

' Зв'язки
InstrID --> статус_адаптації
InstrID --> вміст_інструкції

' Ієрархічне вкладення
[інструкція_id] -- Матеріал_об'єкта : має

@enduml
